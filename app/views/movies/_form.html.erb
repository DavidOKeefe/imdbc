<%= form_for @movie do |f| %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :synopsis %><br />
    <%= f.text_area :synopsis, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :release_date %><br />
    <%= f.date_field :release_date, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>

<% end %>
